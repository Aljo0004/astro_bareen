---
const { image, name, price } = Astro.props;
---

<style>
  .productcard {
    display: flex;
    flex-direction: column;
    border-right: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    background: white;
  }

  .productcard img {
    width: 100%;
    height: 340px;
    object-fit: contain;
    background-color: #efefef;
  }



  .text {
    padding: 1rem;
  }

  .text h3 {
    font-size: 0.8;
    font-weight: 600;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    
    
    text-align: left;
    line-height: 1.4;
  }

  .text p {
    font-size: 0.8;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 500;
    text-align: left;
    margin: 0;
  }
</style>

<div class="productcard">
  <img src={image} alt={name} />
  <div class="text">
    <h3>{name}</h3>
    <p>{price} kr</p>
  </div>
</div>
