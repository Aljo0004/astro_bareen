---
const { image, name, price } = Astro.props;
---

<style>
    .productcard {
        border: 1px solid #e0e0e0;
        padding: 1.5rem 1rem;
      background-color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
    }
  
    .productcard img {
      width: auto;
      height: 260px;
      object-fit: contain;
      margin-bottom: 1.5rem;
    }
  
    .productcard h3 {
      font-size: 1rem;
      font-weight: 600;
      margin: 0 0 0.5rem;
      text-align: center;
    }
  
    .productcard p {
      font-size: 0.95rem;
      margin: 0;
      text-align: center;
    }
  </style>

<div class="productcard">
  <img src={image} alt={name} />
  <h3>{name}</h3>
  <p>{price} kr</p>
</div>
