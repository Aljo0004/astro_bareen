---

<style>
    .products-section {
      padding: 2rem 2rem;
    }
  
    .products {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rem;
}

@media (max-width: 600px) {
    .products {
      grid-template-columns: 1fr;
    }
  }
  </style>

<section class="products-section">
  <Categorieswrapper />
  <div class="products">
    {products.map(product => (
      <Productcard {...product} />
    ))}
  </div>
</section>
